@using X.PagedList.Mvc.Core
@using X.PagedList
@using X.PagedList.Web.Common
@model IPagedList<Subcategory>
@{
    ViewData["Title"] = "Subcategory List by Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="breadcome-area mg-b-30 small-dn">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcome-list shadow-reset">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="breadcome-heading">
                                <a asp-controller="Subcategory" asp-action="Create" class="btn btn-custon-four btn-primary">+ Add New Subcategory</a> - <a asp-controller="Subcategory" asp-action="kurtulusocL" class="btn btn-custon-four btn-info">Active Subcategory</a> - <a asp-controller="Subcategory" asp-action="SubcategoryManage" class="btn btn-custon-four btn-default">Manage Subcategory</a>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <ul class="breadcome-menu">
                                <li>
                                    <a asp-controller="Admin" asp-action="Index" class="btn btn-custon-four btn-default">Home</a> <span class="bread-slash">/</span>
                                </li>
                                <li>
                                    <span class="bread-blod">@ViewData["Title"]</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="admin-dashone-data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline8-list shadow-reset">
                    <div class="sparkline8-hd">
                        <div class="main-sparkline8-hd">
                            <h1>@ViewData["Title"]</h1>
                        </div>
                    </div>
                    <div class="sparkline8-graph">
                        <div class="datatable-dashv1-list custom-datatable-overright">
                            <table id="table" data-toggle="table" data-search="true" data-show-columns="true" data-key-events="true" data-show-toggle="true" data-resizable="true" data-cookie="true" data-cookie-id-table="saveId" data-show-export="true" data-click-to-select="true" data-toolbar="#toolbar">
                                <thead>
                                    <tr>
                                        <th data-field="Subcategory Name">Subcategory Name</th>
                                        <th data-field="Category">Category</th>
                                        <th data-field="Products">Products</th>
                                        <th data-field="Added Date">Added Date</th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>
                                                @if (item.CategoryId != null)
                                                {
                                                    @item.Category.Name
                                                }
                                            </td>
                                            <td>@item.Products.Count()</td>
                                            <td>@item.CreatedDate.ToShortDateString()</td>
                                            <td>
                                                <a asp-controller="Subcategory" asp-action="DeActive" asp-route-id="@item.Id" class="btn btn-warning btn-xs">Set DeActive</a>
                                            </td>
                                            <td>
                                                <a asp-controller="Subcategory" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info btn-xs">Edit</a> |
                                                <a asp-controller="Subcategory" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-xs">Edit</a> |
                                                <a asp-controller="Subcategory" asp-action="Deleted" asp-route-id="@item.Id" class="btn btn-danger btn-xs">Set Deleted</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="pagination">
                    <div class="pagination-info">
                        @Html.PagedListPager(Model, page => Url.Action("Category", new { page }), PagedListRenderOptionsBase.ClassicPlusFirstAndLast)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>