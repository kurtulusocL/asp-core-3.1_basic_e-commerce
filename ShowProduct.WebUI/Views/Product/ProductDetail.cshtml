@model Product
@{
    ViewData["Title"] = "Product Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="breadcome-area mg-b-30 small-dn">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcome-list shadow-reset">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="breadcome-heading">
                                <h2>@ViewData["Title"]</h2>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <ul class="breadcome-menu">
                                <li>
                                    <a asp-controller="Admin" asp-action="Index" class="btn btn-custon-four btn-primary">Home</a> <span class="bread-slash">/</span>
                                </li>
                                <li>
                                    <span class="bread-blod">@ViewData["Title"]</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="static-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline8-list shadow-reset">
                    <div class="sparkline8-hd">
                        <div class="main-sparkline8-hd">
                            <h1>@ViewData["Title"]</h1>
                            <div class="sparkline8-outline-icon">
                                <a asp-controller="Product" asp-action="kurtulusocL" class="btn btn-custon-four btn-primary">Active Product List</a> <span class="bread-slash">/</span>
                            </div>
                        </div>
                    </div>
                    <div class="sparkline8-graph">
                        <div class="static-table-list">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Subtitle</th>
                                        <th>Comments</th>
                                        <th>Reports</th>
                                        <th>Details</th>
                                        <th>Tags</th>
                                        <th>Pictures</th>
                                        <th>Add Date</th>
                                        <th>Updated Date</th>
                                        <th>Deleted Date</th>
                                        <th>Last Operation Date</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>1</td>
                                        <td>@Model.Subtitle</td>
                                        @if (Model != null)
                                        {
                                            <td>@Model.Comments.Count().ToString()</td>
                                            <td>@Model.Reports.Count().ToString()</td>
                                            <td>@Model.ProductDetails.Count().ToString()</td>
                                            <td>@Model.Tags.Count().ToString()</td>
                                            <td>@Model.Pictures.Count().ToString()</td>
                                        }
                                        <td>@Model.CreatedDate.ToShortDateString()</td>
                                        <td>
                                            @if (Model.UpdatedDate != null)
                                            {
                                                @Model.UpdatedDate.Value.ToShortDateString()
                                            }
                                            else
                                            {
                                                <span>No Data</span>
                                            }
                                        </td>
                                        <td>
                                            @if (Model.IsDeletedDate != null)
                                            {
                                                @Model.IsDeletedDate.Value.ToShortDateString()
                                            }
                                            else
                                            {
                                                <span>No Data</span>
                                            }
                                        </td>
                                        <td>
                                            @if (Model.LastOperationDate != null)
                                            {
                                                @Model.LastOperationDate.Value.ToShortDateString()
                                            }
                                            else
                                            {
                                                <span>No Data</span>
                                            }
                                        </td>
                                        <td>
                                        <td>
                                            @if (Model.IsConfirmed == true)
                                            {
                                                <a asp-controller="Product" asp-action="DeActive" asp-route-id="@Model.Id" class="btn btn-warning btn-xs"><i class="fa fa-level-down"></i> </a>
                                            }
                                            else
                                            {
                                                <a asp-controller="Product" asp-action="Active" asp-route-id="@Model.Id" class="btn btn-warning btn-xs"><i class="fa fa-upload"></i></a>
                                            }
                                            @if (Model.IsDeleted == true)
                                            {
                                                <a asp-controller="Product" asp-action="NotDeleted" asp-route-id="@Model.Id" class="btn btn-warning btn-xs"><i class="fa fa-forward"></i></a>
                                            }
                                            else
                                            {
                                                <a asp-controller="Product" asp-action="Deleted" asp-route-id="@Model.Id" class="btn btn-warning btn-xs"><i class="fa fa-remove"></i></a>
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="Product" asp-action="EditProduct" asp-route-id="@Model.Id" class="btn btn-success btn-xs"><i class="fa fa-pencil"></i></a> |
                                            <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@Model.Id" class="btn btn-danger btn-xs"><i class="fa fa-remove"></i></a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>