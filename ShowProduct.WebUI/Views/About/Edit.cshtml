@model About
@{
    ViewData["Title"] = "Update to About";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="breadcome-area mg-b-30 small-dn">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcome-list shadow-reset">
                    <div class="row">
                        <div class="col-lg-6">

                        </div>
                        <div class="col-lg-6">
                            <ul class="breadcome-menu">
                                <li>
                                    <a asp-controller="About" asp-action="kurtulusocL" class="btn btn-custon-four btn-default">About List</a> <span class="bread-slash">/</span>
                                </li>
                                <li>
                                    <span class="bread-blod">@ViewData["Title"]</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="basic-form-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline12-list shadow-reset mg-t-30">
                    <div class="sparkline12-hd">
                        <div class="main-sparkline12-hd">
                            <h1>@ViewData["Title"]</h1>
                            <div class="sparkline12-outline-icon">
                                <strong style="color:darkblue">Fields marked with (*) are required.</strong>
                            </div>
                        </div>
                    </div>
                    <div class="sparkline12-graph">
                        <div class="basic-login-form-ad">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="all-form-element-inner">
                                        <form action="#" method="post" enctype="multipart/form-data">
                                            @Html.AntiForgeryToken()
                                            <div class="form-group-inner input-with-success">
                                                <div class="row">
                                                    <div class="col-lg-3">
                                                        <label class="login2 pull-right pull-right-pro">Title: *</label>
                                                    </div>
                                                    <div class="col-lg-9">
                                                        <div class="form-select-list">
                                                            <input type="text" asp-for="Title" value="@Model.Title" class="form-control" required>
                                                            <span asp-validation-for="Title"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group-inner input-with-success">
                                                <div class="row">
                                                    <div class="col-lg-3">
                                                        <label class="login2 pull-right pull-right-pro">Subtitle: *</label>
                                                    </div>
                                                    <div class="col-lg-9">
                                                        <div class="form-select-list">
                                                            <input type="text" asp-for="Subtitle" value="@Model.Subtitle" class="form-control" required>
                                                            <span asp-validation-for="Subtitle"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group-inner">
                                                <div class="row">
                                                    <div class="col-lg-3">
                                                        <label class="login2 pull-right pull-right-pro">Description: *</label>
                                                    </div>
                                                    <div class="col-lg-9">
                                                        <div class="login-textarea-area">
                                                            <textarea asp-for="Desc" name="Desc" class="contact-message" cols="111" rows="13" required></textarea>
                                                            <span asp-validation-for="Desc"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group-inner">
                                                <div class="row">
                                                    <div class="col-lg-3">
                                                        <label class="login2 pull-right pull-right-pro">Detail: *</label>
                                                    </div>
                                                    <div class="col-lg-9">
                                                        <div class="login-textarea-area">
                                                            <textarea asp-for="Detail" name="Detail" class="contact-message" cols="111" rows="13" required></textarea>
                                                            <span asp-validation-for="Detail"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group-inner input-with-success">
                                                <div class="row">
                                                    <div class="col-lg-3">
                                                        <label class="login2 pull-right pull-right-pro">About Image: *</label>
                                                    </div>
                                                    <div class="col-lg-9">
                                                        <div class="form-select-list">
                                                            <input type="file" name="image" value="@Model.Photo" class="form-control btn btn-success" required>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <hr />
                                            <div class="form-group-inner">
                                                <div class="login-btn-inner">
                                                    <div class="row">
                                                        <div class="col-lg-3"></div>
                                                        <div class="col-lg-9">
                                                            <div class="login-horizental cancel-wp pull-left">
                                                                <button class="btn btn-sm btn-primary login-submit-cs" type="submit">Update About</button>
                                                                <a asp-controller="About" asp-action="kurtulusocL" class="btn btn-default">Cancel</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>