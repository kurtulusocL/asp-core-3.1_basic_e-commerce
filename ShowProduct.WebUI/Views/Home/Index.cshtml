@{
    ViewData["Title"] = "Home Page";
}

<div class="header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <nav class="navbar bg-light">
                    <ul class="navbar-nav">
                        @await Component.InvokeAsync("HomeCategory")
                    </ul>
                </nav>
            </div>
            <div class="col-md-6">
                <div class="header-slider normal-slider">
                    @await Component.InvokeAsync("HomeSlider")
                </div>
            </div>
            <div class="col-md-3">
                <nav class="navbar bg-light">
                    <ul class="navbar-nav">
                        @await Component.InvokeAsync("HomeSubcategory")
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="feature">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-lg-3 col-md-6 feature-col">
                <div class="feature-content">
                    <i class="fab fa-cc-mastercard"></i>
                    <h2>Secure Payment</h2>
                    <p>
                        Lorem ipsum dolor sit amet consectetur elit
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 feature-col">
                <div class="feature-content">
                    <i class="fa fa-truck"></i>
                    <h2>Worldwide Delivery</h2>
                    <p>
                        Lorem ipsum dolor sit amet consectetur elit
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 feature-col">
                <div class="feature-content">
                    <i class="fa fa-sync-alt"></i>
                    <h2>90 Days Return</h2>
                    <p>
                        Lorem ipsum dolor sit amet consectetur elit
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 feature-col">
                <div class="feature-content">
                    <i class="fa fa-comments"></i>
                    <h2>24/7 Support</h2>
                    <p>
                        Lorem ipsum dolor sit amet consectetur elit
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="brand">
    <div class="container-fluid">
        <div class="brand-slider">
            @await Component.InvokeAsync("ProductAd")
        </div>
    </div>
</div>
<div class="featured-product product">
    <div class="container-fluid">
        <div class="section-header">
            <h1>Last Products</h1>
        </div>
        <div class="row align-items-center product-slider product-slider-4">
            @await Component.InvokeAsync("HomeProduct")
        </div>
    </div>
</div>
<div class="recent-product product">
    <div class="container-fluid">
        <div class="section-header">
            <h1>Did You Look Them?</h1>
        </div>
        <div class="row align-items-center product-slider product-slider-4">
            @await Component.InvokeAsync("RandomProduct")
        </div>
    </div>
</div>
<div class="call-to-action">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1>Send E-Mail to Us for any queries</h1>
            </div>
            @await Component.InvokeAsync("HomeContact")
        </div>
    </div>
</div>
<hr />
<div class="review">
    <div class="container-fluid">
        <div class="row align-items-center review-slider normal-slider">
            @await Component.InvokeAsync("HomeComment")
        </div>
    </div>
</div>
