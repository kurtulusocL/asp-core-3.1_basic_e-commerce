<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"] | Asp.net Core 3.1</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <!-- Favicon -->
    <link href="~/img/statics/Logo 3.png" rel="icon">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400|Source+Code+Pro:700,900&display=swap" rel="stylesheet">
    <!-- CSS Libraries -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="~/temp/web/lib/slick/slick.css" rel="stylesheet">
    <link href="~/temp/web/lib/slick/slick-theme.css" rel="stylesheet">
    <!-- Template Stylesheet -->
    <link href="~/temp/web/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="top-bar">
        <div class="container-fluid">
            @await Component.InvokeAsync("HeaderContact")
        </div>
    </div>
    <div class="nav">
        <div class="container-fluid">
            <partial name="_NavbarPartial" />
        </div>
    </div>
    <div class="bottom-bar">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-3">
                    <div class="logo">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="~/temp/web/img/logo.png" alt="Logo">
                        </a>
                    </div>
                </div>
                <div class="col-md-6">
                    @await Component.InvokeAsync("Search")
                </div>
                <div class="col-md-3">
                    <div class="user">
                        @await Component.InvokeAsync("Box")
                    </div>
                </div>
            </div>
        </div>
    </div>

    @RenderBody()

    <div class="footer">
        <div class="container-fluid">
            <partial name="_FooterPartial" />
        </div>
    </div>
    <div class="footer-bottom">
        <div class="container">
            <div class="row">
                <div class="col-md-6 copyright">
                    <p>Copyright &copy; <a asp-controller="Home" asp-action="Index">asp.net core 3.1</a>. All Rights Reserved</p>
                </div>
                <div class="col-md-6 template-by">
                    <p>@DateTime.Now.ToLongDateString()</p>
                </div>
            </div>
        </div>
    </div>
    <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/temp/web/lib/easing/easing.min.js"></script>
    @*<script src="~/temp/web/lib/slick/slick.js"></script>*@
    <script src="~/temp/web/lib/slick/slick.min.js"></script>
    <!-- Template Javascript -->
    <script src="~/temp/web/js/main.js"></script>

</body>
</html>
