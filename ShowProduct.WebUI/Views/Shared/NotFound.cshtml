<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title> Asp.net Core 3.1</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <!-- Favicon -->
    <link href="~/img/statics/Logo 3.png" rel="icon">
    <!-- Google Fonts -->

</head>
<body>
    <div class="top-bar">
        <div class="container-fluid">
          
        </div>
    </div>
    <div class="nav">
        <div class="container-fluid">
           
        </div>
    </div>
    <div class="bottom-bar">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-3">
                    <div class="logo">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="~/temp/web/img/logo.png" alt="Logo">
                        </a>
                    </div>
                </div>
                <div class="col-md-6">
                  
                </div>
                <div class="col-md-3">
                    <div class="user">
                    </div>
                </div>
            </div>
        </div>
    </div>

   

    <div class="footer">
        <div class="container-fluid">
          
        </div>
    </div>
    <div class="footer-bottom">
        <div class="container">
            <div class="row">
                <div class="col-md-6 copyright">
                    <p>Copyright &copy; <a asp-controller="Home" asp-action="Index">asp.net core 3.1</a>. All Rights Reserved</p>
                </div>
                <div class="col-md-6 template-by">
                    <p>@DateTime.Now.ToLongDateString()</p>
                </div>
            </div>
        </div>
    </div>
    <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>

  
</body>
</html>
